<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".FeelingRecommendationActivity">

    <ImageButton
        android:id="@+id/imageButton_myPage"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/baseline_person_24"
        android:layout_gravity="end"
        android:layout_margin="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_gravity="center"
        android:fontFamily="@font/pretendardmedium"
        android:textSize="24sp"
        android:textColor="#88C8B1"
        android:text="당신의 감정을 알려주세요" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_weight="1">

        <android.widget.Button
            android:id="@+id/button_feeling_happy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/button_selector"
            android:elevation="4dp"
            android:fontFamily="@font/pretendardextrabold"
            android:textSize="12sp"
            android:textColor="@drawable/text_color_selector"
            android:text="행복"
            android:onClick="onButtonClick" />

        <android.widget.Button
            android:id="@+id/button_feeling_sad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="19dp"
            android:layout_gravity="center"
            android:background="@drawable/button_selector"
            android:elevation="4dp"
            android:fontFamily="@font/pretendardextrabold"
            android:textSize="12sp"
            android:textColor="@drawable/text_color_selector"
            android:text="슬픔"
            android:onClick="onButtonClick" />

        <android.widget.Button
            android:id="@+id/button_feeling_angry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="19dp"
            android:layout_gravity="center"
            android:background="@drawable/button_selector"
            android:elevation="4dp"
            android:fontFamily="@font/pretendardextrabold"
            android:textSize="12sp"
            android:textColor="@drawable/text_color_selector"
            android:text="화남"
            android:onClick="onButtonClick" />

        <android.widget.Button
            android:id="@+id/button_feeling_depressed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="19dp"
            android:layout_gravity="center"
            android:background="@drawable/button_selector"
            android:elevation="4dp"
            android:fontFamily="@font/pretendardextrabold"
            android:textSize="12sp"
            android:textColor="@drawable/text_color_selector"
            android:text="우울함"
            android:onClick="onButtonClick" />

        <android.widget.Button
            android:id="@+id/button_feeling_excited"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="19dp"
            android:background="@drawable/button_selector"
            android:elevation="4dp"
            android:fontFamily="@font/pretendardextrabold"
            android:onClick="onButtonClick"
            android:text="즐거움"
            android:textColor="@drawable/text_color_selector"
            android:textSize="12sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <android.widget.Button
            android:id="@+id/button_feeling_complete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="100dp"
            android:layout_gravity="center"
            android:background="@drawable/button_unselected"
            android:fontFamily="@font/pretendardextrabold"
            android:textColor="#7E7E7E"
            android:textSize="16sp"
            android:text="완료"
            />

    </LinearLayout>



</LinearLayout>