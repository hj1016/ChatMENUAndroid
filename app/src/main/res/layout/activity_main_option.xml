<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".MainOptionActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_weight="1">

        <android.widget.Button
            android:id="@+id/button_main_filtering"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/button_selector"
            android:elevation="4dp"
            android:fontFamily="@font/pretendardextrabold"
            android:onClick="onButtonClick"
            android:padding="16dp"
            android:text="상세 정보 설정"
            android:textColor="@drawable/text_color_selector"
            android:textSize="12sp" />

        <android.widget.Button
            android:id="@+id/button_main_ir"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="19dp"
            android:layout_gravity="center"
            android:background="@drawable/button_selected"
            android:padding="16dp"
            android:elevation="4dp"
            android:fontFamily="@font/pretendardextrabold"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:text="냉장고 속 재료로 추천받기"
            android:onClick="onButtonClick" />

        <android.widget.Button
            android:id="@+id/button_main_feeling"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="19dp"
            android:layout_gravity="center"
            android:background="@drawable/button_selected"
            android:padding="16dp"
            android:elevation="4dp"
            android:fontFamily="@font/pretendardextrabold"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:text="오늘의 기분으로 추천받기"
            android:onClick="onButtonClick" />

        <android.widget.Button
            android:id="@+id/button_main_weather"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="19dp"
            android:layout_gravity="center"
            android:background="@drawable/button_selected"
            android:padding="16dp"
            android:elevation="4dp"
            android:fontFamily="@font/pretendardextrabold"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:text="오늘의 날씨로 추천받기"
            android:onClick="onButtonClick" />

        <android.widget.Button
            android:id="@+id/button_main_time"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="19dp"
            android:layout_gravity="center"
            android:background="@drawable/button_selected"
            android:padding="16dp"
            android:elevation="4dp"
            android:fontFamily="@font/pretendardextrabold"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:text="현재 시간대로 추천받기"
            android:onClick="onButtonClick" />

        <android.widget.Button
            android:id="@+id/button_main_chat"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="19dp"
            android:layout_gravity="center"
            android:background="@drawable/button_selected"
            android:padding="16dp"
            android:elevation="4dp"
            android:fontFamily="@font/pretendardextrabold"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:text="대화로 추천받기"
            android:onClick="onButtonClick" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >


    </LinearLayout>



</LinearLayout>