<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".TimeRecommendationActivity">

    <LinearLayout
        android:id="@+id/linearLayout_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/imageButton_time_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="start"
            android:background="@drawable/baseline_arrow_back_24" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <ImageButton
            android:id="@+id/imageButton_time_myPage"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="end"
            android:background="@drawable/baseline_person_24" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:fontFamily="@font/pretendardmedium"
        android:textSize="24sp"
        android:textColor="#88C8B1"
        android:text="현재 시간대를 알려 주세요" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_weight="1">

        <android.widget.Button
            android:id="@+id/button_time_morning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/button_selector"
            android:layout_margin="4dp"
            android:elevation="2dp"
            android:fontFamily="@font/pretendardmedium"
            android:textSize="14sp"
            android:textColor="@drawable/text_color_selector"
            android:text="아침"
            android:onClick="onButtonClick" />

        <android.widget.Button
            android:id="@+id/button_time_lunch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="19dp"
            android:layout_gravity="center"
            android:background="@drawable/button_selector"
            android:elevation="2dp"
            android:fontFamily="@font/pretendardmedium"
            android:textSize="14sp"
            android:textColor="@drawable/text_color_selector"
            android:text="점심"
            android:onClick="onButtonClick" />

        <android.widget.Button
            android:id="@+id/button_time_dinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="19dp"
            android:layout_gravity="center"
            android:background="@drawable/button_selector"
            android:elevation="2dp"
            android:fontFamily="@font/pretendardmedium"
            android:textSize="14sp"
            android:textColor="@drawable/text_color_selector"
            android:text="저녁"
            android:onClick="onButtonClick" />

        <android.widget.Button
            android:id="@+id/button_time_night"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="19dp"
            android:layout_gravity="center"
            android:background="@drawable/button_selector"
            android:elevation="2dp"
            android:fontFamily="@font/pretendardmedium"
            android:textSize="14sp"
            android:textColor="@drawable/text_color_selector"
            android:text="새벽"
            android:onClick="onButtonClick" />

    </LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <android.widget.Button
        android:id="@+id/button_time_complete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="100dp"
        android:layout_gravity="center"
        android:background="@drawable/button_unselected"
        android:fontFamily="@font/pretendardextrabold"
        android:textColor="#7E7E7E"
        android:textSize="14sp"
        android:text="완료"
        />

</LinearLayout>



</LinearLayout>